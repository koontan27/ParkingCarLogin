<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.parkinglogin.ui.loginFragment"
        android:label="login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_carSlot"
            app:destination="@id/carSlot" />
    </fragment>
    <fragment
        android:id="@+id/about"
        android:name="com.example.parkinglogin.about"
        android:label="About"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/carSlot"
        android:name="com.example.parkinglogin.carSlot"
        android:label="Booking"
        tools:layout="@layout/fragment_car_slot" />
</navigation>